doctype html
html
  head
    title Morning Meditation
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="styles/mind.css")
    script(src="script.js", defer)
  body
    header
      nav
        h1 Morning Meditation
        ul.nav-links
          li
            a(href="#music") Music
          li
            a(href="#videos") Videos
          li
            a(href="#extra-content") Other Content
          li
            a(href="#mood-tracker") Mood Tracker
    main
      section#hero
        .container
          h2 Discover Peace and Serenity Every Morning
          p Explore music, videos, and tools to elevate your mornings.
          button(type="button", onclick="startExperience()") Start Experience

      section#music
        h3 Soothing Music
        p Immerse yourself in calming melodies.
        .music-player
          audio(controls)
            source(src="calm-music.mp3", type="audio/mp3")
            p Your browser does not support the audio element.
          p Track: Morning Serenity
        button(type="button", onclick="exploreMusic()") Explore More Music

      section#videos
        h3 Inspirational Videos
        p Watch curated videos to inspire your day.
        .video-container
          iframe(width="560", height="315", src="https://www.youtube.com/embed/5qap5aO4i9A", title="Relaxing Jazz") 
          iframe(width="560", height="315", src="https://www.youtube.com/embed/2uUAln4fEuI", title="Mindfulness Morning Routine")
        button(type="button", onclick="exploreVideos()") Explore More Videos

      section#extra-content
        h3 Articles and Other Content
        p Dive into articles, tips, and tools for a mindful life.
        ul.extra-list
          li
            a(href="#") "The Science of Morning Mindfulness"
          li
            a(href="#") "10-Minute Daily Meditation Tips"
          li
            a(href="#") "Benefits of Starting Your Day with Music"
        button(type="button", onclick="readMore()") Read More Articles

      section#link-to-mood-tracker
        h3 Track Your Mood
        p Reflect on your emotions and track your progress.
        a.button(href="#mood-tracker") Go to Mood Tracker

      section#mood-tracker
        h3 Mood Tracker
        p How are you feeling today?
        textarea#mood-textarea(placeholder="Write about your mood here...")
        button(type="button", onclick="saveMood()") Save Mood

      footer
        p &copy;  2024 Flo Mindrise. All rights reserved.

    script.
      // JavaScript to support functionality
      function startExperience() {
        alert('Starting your morning experience...');
      }

      function exploreMusic() {
        alert('Redirecting to music library...');
      }

      function exploreVideos() {
        alert('Redirecting to video library...');
      }

      function readMore() {
        alert('Opening more articles...');
      }

      function saveMood() {
        const mood = document.getElementById('mood-textarea').value;
        alert(`Mood saved: ${mood}`);
      }
