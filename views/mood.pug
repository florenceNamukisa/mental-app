doctype html
html
  head
    title Mood Tracker - Add Mood
    link(rel="stylesheet" href="/styles/style.css")
  body
    header
      h1 How Are You Feeling Today😊 ?
    main
      form(action="/submit-mood" method="POST" class="mood-form")
        div.form-group
          label(for="date") Date:
          input(type="date" id="date" name="date" required)
        div.form-group
          label(for="mood") Mood:
          select(id="mood" name="mood" required)
            option(value="happy") 😊 Happy
            option(value="sad") 😢 Sad
            option(value="angry") 😠 Angry
            option(value="excited") 😃 Excited
            option(value="anxious") 😰 Anxious
            option(value="neutral") 😐 Neutral
        div.form-group
          label(for="notes") Notes:
          textarea(id="notes" name="notes" placeholder="How are you feeling today?") 
        div.form-group
          button(type="submit") Submit Mood
